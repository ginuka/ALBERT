@model ALBERT.ViewModels.MenuItemDto

<h2>Menu Item Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <h5 class="card-subtitle text-muted">Category: @Model.Category</h5>
        <p class="mt-3"><strong>Price:</strong> <span class="text-success">LKR @Model.Price.ToString("N2")</span></p>
        <p><strong>Description:</strong> @Model.Description</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-primary mt-3">Back to Menu Items</a>
