@model ALBERT.Models.Customer

<h2>Customer Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-primary mt-3">Back to Customers</a>
