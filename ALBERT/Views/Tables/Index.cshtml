@model List<ALBERT.Models.Table>

@{
    ViewData["Title"] = "Tables";
}

<h2>Tables</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Table</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Table Number</th>
            <th>Capacity</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var table in Model)
        {
            <tr>
                <td>@table.TableNumber</td>
                <td>@table.Capacity</td>
                <td>@table.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@table.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@table.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@table.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
