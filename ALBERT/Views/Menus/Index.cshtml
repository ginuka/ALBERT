@using ALBERT.ViewModels
@model List<MenuDto>

@{
    ViewData["Title"] = "Menus";
}

<h2>Menus</h2>
<a asp-action="Create" class="btn btn-primary">Create New Menu</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var menu in Model)
        {
            <tr>
                <td>@menu.Id</td>
                <td>@menu.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@menu.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@menu.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@menu.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
