@model IEnumerable<ALBERT.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>
<a asp-action="Create" class="btn btn-primary">Add Employee</a>
<table class="table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Salary (LKR)</th>
            <th>Hire Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Phone</td>
                <td>@emp.Role</td>
                <td>@emp.Salary.ToString("N2")</td>
                <td>@emp.HireDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
